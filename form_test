        document.getElementById('contactForm').addEventListener('submit', function(event) {
            // Vous pouvez ajouter une validation côté client ici si nécessaire
            
            // Cette partie est optionnelle si vous utilisez FormSubmit
            // car FormSubmit gère déjà les soumissions
            
            // Pour afficher un message de succès sans redirection:
            event.preventDefault();
            document.getElementById('successMessage').style.display = 'block';
            document.getElementById('contactForm').reset();
        });
